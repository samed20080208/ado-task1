<Window x:Class="ado_task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ado_task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="240">
    <Grid>
        <StackPanel>
            <Label FontWeight="ExtraBlack" Foreground="#FF1300F7" Width="200" Content="Username" Margin="0 0 0 0"/>
            <TextBox Width="200" Margin="0 0 0 0"/>
            <Label FontWeight="ExtraBlack" Foreground="#FF1300F7" Width="200" Content="Password" Margin="0 0 0 0"/>
            <TextBox Width="200" Margin="0 0 0 10"/>
            <Button Height="25" FontWeight="bold" Width="200" Content="Sign in" Background="#FF1300F7" BorderBrush="White" Foreground="White"/>
            <Label Width="200" Content="If you dont have an accont" Foreground="red"/>
            <Button Height="25" FontWeight="bold" Width="200" Content="Sign up" Background="#FF1300F7" BorderBrush="White"  Foreground="White"/>
                
        </StackPanel>
    </Grid>
</Window>
